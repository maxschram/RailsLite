<h2>Name</h2>
<%= @cat.name %>

<h2>Owner</h2>
<% if @cat.human %>
  <%= @cat.human.fname %> <%= @cat.human.lname %>
<% end %>

<br><br>
<%= cats_url(@cat.id) %>
<form action="<%= cats_url(@cat.id) %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token  %>">

  <input type="submit" value="Delete this cat">


<br><br>
<a href="/cats/<%= @cat.id %>/edit">Edit this cat</a>

<br><br>
<a href="/cats">Back to the Cats</a>
